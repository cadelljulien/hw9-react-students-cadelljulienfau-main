<!DOCTYPE html>
<html>
  <%- include('../views/head') %>
  <%- include('../views/navbar') %>
  <body>
    <br></br>
    <br></br>
    <label for="first_name">First Name:</label> <!-- textbox for first and last name -->
    <input type="text" id="first_name" name="first_name"><br><br>
    <label for="last_name">Last Name:</label>
    <input type="text" id="last_name" name="last_name"><br><br>
  <!-- buttons added -->
    <button onclick="getstudent()">View Student</button>
    <br>
    <br>
    <div id="mydiv" name="mydiv"></div>
    <script>
  //
  function getstudent() {
    var first_name_val = $("#first_name").val();
    var last_name_val = $("#last_name").val();
    $.ajax({
      url: "http://localhost:5678/students/" + first_name_val + "/" + last_name_val,
      type: "get",
      success: function(response) {
        $("#mydiv").text(JSON.stringify(response));
      },
      error: function(xhr) {
        $("#mydiv").text('error: ' + xhr.responseText);
        console.log(xhr)
      }
    });
  }
  



    
    
  </script>

</body>
</html>